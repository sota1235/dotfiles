{
  "mcpServers": {},
  "permissions": {
    "allow": [
      "Bash(npm ls:*)",
      "Bash(find:*)",
      "Bash(wc:*)",
      "Bash(cat:*)",
      "Bash(tree:*)",
      "Bash(tail:*)",
      "Bash(pnpm list:*)",
      "Bash(pnpm view:*)",
      "Bash(pnpm why:*)",
      "Bash(npm view:*)",
      "Bash(npm ls:*)",
      "Bash(npm show:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git status:*)",
      "Bash(git fetch --prune:*)",
      "Bash(git worktree list:*)",
      "Bash(terraform fmt)",
      "WebFetch(domain:docs.github.com)",
      "WebFetch(domain:anthropic.com)",
      "WebFetch(domain:docs.anthropic.com)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/stop-notification.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notification.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "skill-creator@claude-plugins-official": true
  }
}
