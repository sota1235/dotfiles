#!/bin/bash

set -e

echo "üì¶ Installing zinit plugins..."

# Check if zinit is installed
ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"
if [ ! -d "${ZINIT_HOME}" ]; then
  echo "‚ö†Ô∏è  zinit is not installed, skipping plugin installation"
  exit 0
fi

# Install plugins using zinit
echo "  - Installing azu/ni.zsh..."
zsh -c "
  ZINIT_HOME=\"${ZINIT_HOME}\"
  source \"\${ZINIT_HOME}/zinit.zsh\"
  zinit light azu/ni.zsh
"

echo "‚ú® zinit plugins installation completed!"
