#!/bin/zsh

### functions and alias for instalation ###
function cecho {
  if [ $OS=='Lunux' ]; then
    echo -e "\e[34m$*\e[m";
  elif [ $OS=='Mac' ]; then
    printf "\033[34m$*\033[0m\n";
  else
    # TODO: Cygwinの際のecho
    echo -e "\e[34m$*\e[m";
  fi
}

# GNUとBSDのsedの挙動の違いを吸収
if sed --version 2>/dev/null | grep -q GNU; then
  alias sedi='sed -i '
else
  alias sedi='sed -i "" '
fi

###
# Start install
###
echo -n "(*'-') < Do you want to update the dotfiles? [y/N] "
ANSWER=""
read ANSWER
if [ $ANSWER != "y" ]; then
  exit "Update is not done...(._.)"
fi
# TODO: y/N以外の場合の処理

###
# judge OS
###
if [ "$(uname)"=='Darwin' ]; then
  OS='Mac'
elif [ "$(expr substr $(uname -s) 1 5)"=='Linux' ]; then
  OS='Linux'
elif [ "$(expr substr $(uname -s) 1 10)"=='MINGW32_NT' ]; then
  OS='Cygwin'
else
  echo "Your platform ($(uname -a)) is not supported."
  exit 1
fi

###
# Cloning latest dotfiles
###

cecho "Starting cloning latest dotfiles"

CURRENT_PATH=`pwd` # save current path
cd $HOME/.dotfiles
if git pull --stat --rebase origin master; then
  echo '.----.  .----.  .---.   .----..-..-.   .----. .----.'
  echo '| {}  \/  {}  \{_   _}  | {_  | || |   | {_  { {__  '
  echo '|     /\      /  | |    | |   | || `--.| {__ .-._} }'
  echo '`----   `----    `-     `-    `- `---- `---- `----  '
else
  cecho "There was an error updating. Try again later?"
fi

###
# Vim Setup
###

cecho "Starting Vim updating"

# make the vim files
cp `pwd`/vim/vimrc ~/.vimrc

###
# Git Setup
###

cecho "Starting Git setup"

# make the git files
cp `pwd`/gitfiles/gitignore ~/.gitignore
cp `pwd`/gitfiles/gitconfig ~/.gitconfig

###
# Zsh Setup
###

# include alias.zsh
cecho "Starting zsh setup"

# cp zsh files
cp `pwd`/zsh/zshrc.zsh ~/.zshrc
cp `pwd`/zsh/zshenv.zsh ~/.zshenv

###
# tmux Setup
###

cecho "Startging tmux setup"

# cp tmux.conf
cp `pwd`/tmux/tmux.conf ~/.tmux.conf

cecho "Updating is completed"

cd $CURRENT_PATH # return to path command excute

env zsh
