[include]
  path = ~/.gitconfig_local
[color]
  status      = auto
  diff        = auto
  branch      = auto
  interactive = auto
  grep        = auto
[core]
  editor       = vim
  excludesfile = ~/.gitignore
  autocrlf     = input
[alias]
  st = status
  co = checkout
  ci = commit
  wc = whatchanged
  today = "!sh -c 'git log --reverse --no-merges --branches=* --date=local --since=midnight --oneline --author=\"`git config --get user.name`\"'"
